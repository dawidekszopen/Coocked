<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeDetailsFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageR"
            android:layout_gravity="center"
            android:src="@drawable/no_image"
            android:layout_width="150dp"
            android:layout_height="150dp"/>



        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nazwaR"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Nazwa"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/ocenaR"
                android:layout_gravity="center"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Opis"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/opisR"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="opissssssssssssssssssssssssssssssssssssssssssss"
        android:paddingLeft="15dp"
        android:layout_marginBottom="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="SkÅ‚adniki"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/skladnikiR"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="skladniki"
        android:paddingLeft="15dp"
        android:layout_marginBottom="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Instrukcje"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/instrukcjeR"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="skladniki"
        android:paddingLeft="15dp"
        android:layout_marginBottom="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/EditPrzepis"
        android:layout_gravity="center"
        android:text="Popraw przepis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>