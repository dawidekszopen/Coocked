<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditRecipeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popraw przepis"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/imageER"
        android:layout_gravity="center"
        android:src="@drawable/no_image"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <EditText
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/nazwaER"
        android:hint="nazwa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/opisER"
        android:hint="opis"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:id="@+id/skladnikiER"
        android:hint="skÅ‚adniki"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:id="@+id/instrukcjaER"
        android:hint="instrukcja"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/ocenaER"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/AddRecipeBtn"
        android:text="Popraw Przepis"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>